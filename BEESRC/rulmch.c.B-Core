void write_ver_cns_rul(f)
{register int a,c,i,v ;
  if( val_root_frm(f)==IMP_sym ){
    a=dec_tree(f,left_node_tree(f,root_tree(f)),AND_sym);
    c=cre_cop_tree(f,right_node_tree(f,root_tree(f)));
    itr(a,i,v,reset_res(6);
              write_frm_res(v,6);
              fprintf ( bstdout, "\n"));
    reset_res(6);
    write_chr_res(ord('='));
    write_chr_res(ord('>'));
    fprintf ( bstdout, "\n");
    reset_res(6);
    write_frm_res(c,6);
    itr(a,i,v,kil(v));
    kil(a);
    kil(c);
  } else {
    reset_res(6);
    write_frm_res(f,6);
};
}

