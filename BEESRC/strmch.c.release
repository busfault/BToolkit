int len_str(b)
{register int l,v,i ;
  l=len(b);
  if( l!=0 ){
    v=val(b,l);
    l=4*(l-1);
    itrn( i , 1 , 4 , {
      if( v % 128!=0 ){
        l=l+1;
      };
      v=v / 128
   ;});
  }
; return l;
}

int val_str(b,i)
{register int v,j,k ;
  j=(i-1) / 4 + 1;
  v=val(b,j);
  k=(i-1) % 4;
  while( k!=0 ){
    v= v / 128;
    k=k-1;
  }
; return v % 128;
}

