void write_chr(n)
{register int i,r,v ;
  v=n;
  itrn( i , 1 , 4 , {
    r=v % 128;
    if( r!=0 ){ putc(r, bstdout) ;};
    v=v / 128
 ;});
}

void write_str(s)
{register int i ;
  i=1; 
  while( !(i>len(s)) ){ 
    write_chr(val(s,i));
    i=i+1;
  }
}

