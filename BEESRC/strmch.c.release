void psh_str(b,w)
{register int l ;
  l=len_str(b);
  if( l % 4 == 0 ){
    psh(b,w);
  } else {
    mod_str(b,l+1,w);
  };
}

#define clr_str(b) clr(b)
void pop_str(b)
{register int l ;
  l=len_str(b);
  if( l % 4 == 1 ){
    pop(b);
  } else {
    mod_str(b,l,0);
  };
}

