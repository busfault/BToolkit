void write_old_hor_rul(r)
{register int n,f ;
  n=num_rul(r);
  reset_res(0);
  if( sts_rul(r)==off_rul ){
    write_chr_res(ord('-'));
  } else if( pvd_rul(r)==now_rul ){
    write_blk_res(1);
  } else {
    write_chr_res(ord('*'));
  };
  switch( typ_rul(r) ){
    case nrm_rul :{
      write_chr_res(ord('N'))
    ;break;}case rul_rul :{
      write_chr_res(ord(' '))
    ;break;}case lem_rul :{
      write_chr_res(ord('L'))
    ;break;};
  };
  write_blk_res(1);
  write_num_res(num_rul(r));
  if( n<10 ){
    write_blk_res(1);
  };
  write_blk_res(1);
  f=cre_rec_rul(r);
  write_frm_res(f,6);
  kil(f);
}

