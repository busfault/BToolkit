restore_alloc ( nnn )
{
  while ( max_mem < nnn ) {
    max_mem += alloc_topup;
  }
  mmts = ( int * ) realloc ( mmts, ( ( max_mem + 5 ) * sizeof ( int ) ) );
  if ( mmts == NULL ) {
     printf ( "\n  malloc failure\n" );
     exit ( 1 );
  }
}

